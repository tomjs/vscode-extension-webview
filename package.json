{
  "name": "@tomjs/vscode-extension-webview",
  "version": "1.0.3",
  "description": "When using 'webview.html' in vscode extension development, 'HMR' of vue/react is supported.",
  "keywords": [
    "node"
  ],
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./client": "./dist/client.global.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/vscode-extension-webview.git"
  },
  "scripts": {
    "dev": "run-p dev:template dev:lib",
    "dev:lib": "tsup --watch",
    "dev:template": "cross-env WATCH=1 tsx watch ./scripts/template.ts",
    "build": "rimraf ./dist && run-s build:template build:lib",
    "build:lib": "tsup",
    "build:template": "tsx ./scripts/template.ts",
    "lint": "run-s lint:eslint lint:stylelint lint:prettier",
    "lint:eslint": "eslint \"{src,examples,scripts}/**/*.ts\" *.{js,cjs,ts,tsx,vue} --fix --cache",
    "lint:stylelint": "stylelint \"examples/**/*.{css,scss,less,vue,html}\" --fix --cache",
    "lint:prettier": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && np --any-branch --no-yarn --yolo --no-publish --message \"chore: release v%s\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@tomjs/commitlint": "^2.1.1",
    "@tomjs/eslint": "^1.2.1",
    "@tomjs/prettier": "^1.1.1",
    "@tomjs/stylelint": "^2.1.1",
    "@tomjs/tsconfig": "^1.2.1",
    "@types/node": "^18.19.3",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "stylelint": "^16.0.2",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3"
  }
}
